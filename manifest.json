{
  "manifest_version": 3,
  "name": "Where am I",
  "description": "Instantly know your location - shows your IP country flag on the extension icon",
  "version": "1.0.0",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Where am I - View your location"
  },
  "author": "Where am I Team",
  "homepage_url": "https://github.com/your-username/where-am-i-extension",
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "https://ipapi.co/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/flags/*.png", "icons/refresh.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
